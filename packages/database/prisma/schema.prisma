generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id            String         @id @default(ulid())
  username      String         @unique
  email         String         @unique
  password      String
  leads         Lead[]
  role          Roles          @default(sales)
  isApproved    Boolean        @default(false)
  refreshTokens RefreshToken[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@map("user")
}

//todo : replace employee with sales : done
enum Roles {
  admin
  manager
  sales
}

model RefreshToken {
  id        String   @id @default(ulid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("refreshToken")
}

// Lead Schema 
model Lead {
  id          Int             @id @default(autoincrement())
  name        String
  phone       String
  address     String?
  panels      String
  inverter    String
  status      Status          @default(status)
  capacity    Float
  structure   String
  createdBy   User            @relation(fields: [createdById], references: [id])
  createdById String
  invoiceNo   InvoiceCounter? @relation(fields: [invoiceNoId], references: [id])
  invoiceNoId Int?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@map("lead")
}

// Lead Status
enum Status {
  status
  contacted
  deal
  lost
  installation
}

model InvoiceCounter {
  id    Int    @id @default(autoincrement())
  name  String
  count Int?
  leads Lead[]

  @@map("invoiceCounter")
}